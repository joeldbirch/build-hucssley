{
  "name": "build-hucssley",
  "version": "0.0.1",
  "private": true,
  "description": "Quickly add a standalone Hucssley build process.",
  "main": "index.js",
  "scripts": {
    "styles:sass": "webpack --config webpack.config.js",
    "styles:purge": "purgecss --config ./purgecss.config.js -o src/styles",
    "styles:build": "npm run styles:sass && npm run styles:purge",
    "styles:watch": "webpack --watch --config webpack.config.js"
  },
  "keywords": [
    "css"
  ],
  "author": "Joel Birch <joeldbirch@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "css-loader": "^3.4.2",
    "fibers": "^4.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "purgecss": "^2.1.0",
    "sass": "^1.26.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "hucssley": "github:stowball/hucssley#master"
  }
}
